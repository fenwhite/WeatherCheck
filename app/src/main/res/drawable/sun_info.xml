<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="@dimen/sun_line_offset">
        <shape
            android:layout_width="match_parent"
            android:shape="line">
            <stroke
                android:width="2dp"
                android:color="@color/sun_line" />
            <padding
                android:left="@dimen/sun_line_padding"
                android:right="@dimen/sun_line_padding" />
        </shape>
    </item>
    <item>
        <shape
            android:layout_width="wrap_content"
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/oval_height"
                android:topRightRadius="@dimen/oval_height" />
            <size
                android:width="@dimen/oval_width"
                android:height="@dimen/oval_height" />
            <stroke
                android:width="1dp"
                android:color="@color/sun_track_oval"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
        </shape>
    </item>

</layer-list>